#!/bin/bash
# Author: Marcel Kallinger https://github.com/ItzMxrcxl
# BackupMyPi Script

if [ -z $1 ] #if no argument is given set arg normal (*)
then
  arg="normal"
elif [ -n $1 ]
then #otherwise arg=argument
  arg=$1
fi

show_version() (
	LOCAL_VERSION=`cat /usr/bin/backupmypi/version`
	echo "BackupMyPi v"$LOCAL_VERSION" (c)2020"
)

case "$arg" in
	--update) bash /usr/bin/backupmypi/updater.sh ;;
	--force-update) bash /usr/bin/backupmypi/updater.sh -force ;;
	-u) bash /usr/bin/backupmypi/updater.sh ;;
	-v) show_version ;;
	-help) echo """
~~~~~~~~~~~~~~~~~~~~~~~~~BackupMyPi~~~~~~~~~~~~~~~~~~~~~~~~~
ussage:
Normal ussage
	Give the script no parameter and it will continue in normal mode.
Update:
	-u
	--update
		Check for Updates
	--force-update
		Force a Update
-help
	Show this dialoge
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~""" ;;

	*) bash /usr/bin/backupmypi/main.sh ;;
esac